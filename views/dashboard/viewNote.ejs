<div class="container-fluid container-fluid-costum pb-5 mb-5 custom-width-md ">
    <div class=" row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb d-flex w-100">
                    <li class="breadcrumb-item flex-grow-3">
                        <a href="/dashboard" class="">
                            <h5 class="m-0">Dashboard</h5>
                        </a>
                    </li>
                    <li class="breadcrumb-item flex-grow-1">
                        <h5 class="m-0">
                            <%= note.title %>
                        </h5>
                    </li>
                </ol>
            </nav>
            <div class="col d-flex justify-content-between align-items-center">
                <h1>View note</h1>
                <button class="btn btn-danger me-2 " type="button" data-bs-toggle="modal" id="deleteButton"
                    data-bs-target="#deleteModal">Delete</button>
            </div>
        </div>


    </div>

    <form action="/dashboard/item/<%= noteId%>?_method=PUT" method="POST">
        <div class="form-group ">
            <input type="text" class="form-control fw-bold border-0 fs-4" id="title" name="title"
                value="<%= note.title %>" placeholder="title" required>
        </div>
        <div class="form-group mb-4">
            <textarea class="form-control" id="content" name="content" rows="12" placeholder="Write your note here"
                required><%= note.content %></textarea>
        </div>
        <button class="btn btn-primary" type="submit">Save</button>
    </form>

</div>


<div class=" modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">You are about to delete this note</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>This will delete your note
                    <b class="fw-bold">
                        <%= note.title %>
                    </b>
                    <br />
                    Are you sure you want to delete this note?

                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form action="/dashboard/item-delete/<%= noteId %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>

            </div>
        </div>
    </div>
</div>